{
  "imports": {
    "hono": "jsr:@hono/hono",
    "badge-maker": "npm:badge-maker",
    "chanfana": "npm:chanfana",
    "zod": "npm:zod",
    "commander": "npm:commander",
    "@octokit/rest": "npm:@octokit/rest"
  },
  "tasks": {
    "lock": "deno cache main.ts --lock --reload",
    "start": "deno run -A --env-file=secrets/localdev.env main.ts",
    "dev": "deno run --watch --env-file=secrets/localdev.env -A main.ts",
    "deploy:prod": "deno run -A jsr:@deno/deployctl deploy --org=lorebooks.wiki --project=lorebooks-badges-api --prod",
    "deploy:preview": "deno run -A jsr:@deno/deployctl deploy --org=lorebooks.wiki --project=lorebooks-badges-api",
    "utils:users": "deno run -A --env-file=secrets/localdev.env ./utils/manage-api-users.ts",
    "utils:badges": "deno run -A --env-file=secrets/localdev.env ./utils/badges-admin.ts"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  },
  "deploy": {
    "project": "6bbdce0d-80f3-43dc-b1fe-59adca47e89f",
    "exclude": [
      "**/node_modules"
    ],
    "include": [],
    "entrypoint": "main.ts"
  },
  "unstable": [
    "kv",
    "bare-node-builtins"
  ]
}